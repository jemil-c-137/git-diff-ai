{
    "name": "git-diff-ai",
    "version": "1.0.1",
    "description": "An AI-powered Git commit message generator",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "git-diff-ai": "node src/index.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:integration": "jest --config jest.config.js --testMatch **/*.integration.test.js",
        "test:e2e": "npm run test src/__tests__/end-to-end.test.js",
        "build": "esbuild src/index.js --bundle --minify --platform=node --target=node18 --outfile=dist/bundle.js",
        "package": "nexe dist/bundle.js -o dist/your-cli-tool-name"
    },
    "keywords": [
        "git",
        "commit",
        "message",
        "generator",
        "ai"
    ],
    "author": "Jemil Suleimanov",
    "license": "MIT",
    "dependencies": {
        "clipboardy": "^4.0.0",
        "ollama": "^0.5.9",
        "chalk": "^5.3.0"
    },
    "bin": {
        "git-diff-ai": "./src/index.js"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "esbuild": "^0.17.19",
        "nexe": "^4.0.0-rc.2"
    },
    "jest": {
        "transform": {}
    }
}
