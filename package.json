{
    "name": "git-diff-ai",
    "version": "1.0.1",
    "description": "An AI-powered Git commit message generator",
    "main": "src/index.js",
    "scripts": {
        "git-diff-ai": "node src/index.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:integration": "jest --config jest.config.js --testMatch **/*.integration.test.js",
        "test:e2e": "npm run test src/__tests__/end-to-end.test.js",
        "build": "esbuild src/index.js --bundle --minify --platform=node --target=node18 --outfile=dist/bundle.js",
        "build:mac": "bash scripts/macos/build-macos.sh",
        "build:linux": "bash scripts/linux/build-linux.sh"
    },
    "keywords": [
        "git",
        "commit",
        "message",
        "generator",
        "ai"
    ],
    "author": "Jemil Suleimanov",
    "license": "MIT",
    "dependencies": {
        "ansi-colors": "^4.1.3",
        "copy-paste": "^1.5.3",
        "ollama": "^0.5.9"
    },
    "bin": {
        "git-diff-ai": "./src/index.js"
    },
    "devDependencies": {
        "esbuild": "^0.17.19",
        "jest": "^29.7.0"
    },
    "jest": {
        "transform": {}
    }
}
